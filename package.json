{
    "name": "project-colors",
    "displayName": "Workspace Name & Colors",
    "description": "Customize workspace colors and specify a name to distinguish multiple windows. Keywords: project workspace colors peacock colorize",
    "version": "1.1.2",
    "engines": {
        "vscode": "^1.60.0"
    },
    "homepage": "https://github.com/lennardv2/project-colors",
    "icon": "img/logo.png",
    "publisher": "lennardv",
    "repository": {
        "type": "git",
        "url": "https://github.com/lennardv2/project-colors"
    },
    "categories": [
        "Themes",
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Project Colors",
            "properties": {
                "projectColors.name": {
                    "type": "string",
                    "description": "Name of the project"
                },
                "projectColors.mainColor": {
                    "type": "string",
                    "description": "Main color of the project"
                },
                "projectColors.isActivityBarColored": {
                    "type": "boolean",
                    "description": "Whether the activity bar is colored"
                },
                "projectColors.isTitleBarColored": {
                    "type": "boolean",
                    "description": "Whether the title bar is colored"
                },
                "projectColors.isStatusBarColored": {
                    "type": "boolean",
                    "description": "Whether the status bar is colored"
                },
                "projectColors.isProjectNameColored": {
                    "type": "boolean",
                    "description": "Whether the project name is colored"
                },
                "projectColors.isActiveItemsColored": {
                    "type": "boolean",
                    "description": "Whether active items are colored"
                },
                "projectColors.setWindowTitle": {
                    "type": "boolean",
                    "description": "Whether to set the window title"
                },
                "projectColors.workspaces": {
                    "type": "array",
                    "description": "List of workspace references",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "directory": {
                                "type": "string",
                                "description": "Path to the workspace directory"
                            }
                        }
                    }
                },
                "projectColors.groups": {
                    "type": "array",
                    "description": "List of workspace groups",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of the group"
                            },
                            "workspaces": {
                                "type": "array",
                                "description": "Workspaces in this group",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "directory": {
                                            "type": "string",
                                            "description": "Path to the workspace directory"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "commands": [
            {
                "command": "project-colors.openSettings",
                "title": "Customize Project Colors"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "package": "vsce package",
        "publish:vscode": "vsce publish --pat ${VSCE_PAT:-}",
        "publish:ovsx": "ovsx publish --pat ${OVSX_PAT:-}",
        "publish:all": "npm run publish:vscode && npm run publish:ovsx"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.17.12",
        "@types/vscode": "1.60",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.6.0",
        "eslint": "^9.16.0",
        "ovsx": "^0.10.5",
        "typescript": "^5.7.3"
    },
    "license": "MIT"
}